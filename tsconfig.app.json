{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "jsx": "react",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true, // Enable declaration generation
    "declarationDir": "dist", // Output declaration files in 'dist' directory
    "emitDeclarationOnly": true, // Only emit declaration files
    "skipLibCheck": true, // Optional, helps speed up compilation
    "composite": true, // Add this line to resolve the error
    "isolatedModules": true // Add this if you're working with TypeScript only files
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
